package operator;

public class Operator_practice {
	// if-else if로 그리고 switch -case로 사칙연산 구현
	// 다이아몬드 출력
	public static void main(String[] args) {
		int length = 7;
		int i = 0;
		for(i = 0; i <= length/2; i++) {
			for(int j = 0; j < 2 * i + 1; j++) {
				if((length/2) - j != 0) {
					System.out.print(" ");
				}
				System.out.print("*");
			}
			System.out.println();
		}	
	}
}
