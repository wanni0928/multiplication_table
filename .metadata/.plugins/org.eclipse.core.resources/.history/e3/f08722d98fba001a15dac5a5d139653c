package operator;

public class Operator_practice {
	// if-else if로 그리고 switch -case로 사칙연산 구현
	// 다이아몬드 출력
	public static void main(String[] args) {
		int length = 7;
		
		for(int i = -(length/2); i <= length/2; i++) {
			System.out.println(i);
			for(int j = 0; j < 2 * i + 1; j++) {
				System.out.print("*");
			}
			System.out.println();
		}
	}
}
